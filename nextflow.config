/*To specify Docker or singularity use
 nextflow run script.nf -profile docker/singularity
*/

profiles {

	docker {
		// Downloads the container from docker registry
		process.container = 'samordil/ont-metatranscriptomics:1.0.0'
		docker.enable = true
	}
	
	singularity {
		// Downloads the container from singularity registry
		process.container = 'docker://quay.io/samordil/ont-metatranscriptome.sf'
		singularity.enable = true
	}

	
}